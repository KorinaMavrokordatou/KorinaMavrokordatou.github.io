{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://app.sportdataapi.com/api/v1/soccer/matches?apikey=a2bf7e20-4bdc-11ec-95b0-3ded6d4e1aa4&season_id=2109",
    "format": {"type": "json", "property": "data"}
  },
  "title": {
    "text": "Cyprus 1st division: Home vs Away",
    "subtitle": ["Cumulative goals scored by home and away teams", ""],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "transform": [
    {"calculate": "now()", "as": "today"},
    {"calculate": "datum.match_start - datum.today", "as": "futureTest"},
    {"filter": "datum.futureTest<0"},
    {
      "window": [
        {"op": "sum", "field": "stats.home_score", "as": "Home"},
        {"op": "sum", "field": "stats.away_score", "as": "Away"}
      ],
      "sort": [{"field": "match_start", "order": "ascending"}]
    }
  ],
  "height": 300,
  "width": 300,
  "encoding": {
    "x": {"field": "match_start", "type": "temporal", "title": null}
  },
  "layer": [
    {
      "mark": {"type": "circle", "size": 100},
      "encoding": {
        "y": {"field": "Home", "type": "quantitative", "title": null},
        "color": {
          "datum": "Home",
          "scale": {"scheme": "category10"},
          "legend": {"orient": "top-left", "fillColor": "white"}
        }
      }
    },
    {
      "mark": {"type": "circle", "size": 100},
      "encoding": {
        "y": {"field": "Away", "type": "quantitative", "title": null},
        "color": {"datum": "Away"}
      }
    }
  ],
  "config": {}
}
