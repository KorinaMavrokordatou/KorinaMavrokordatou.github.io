{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Gender overall earnings gap in Central and Eastern European countries",
    "subtitle": [
      "Gender overall earnings gap in the industry, construction and services sector,% (y), year (x)",
      "Source: Eurostat"
    ],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/KorinaMavrokordatou/KorinaMavrokordatou.github.io/main/teqges01_1_Data.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "countries",
      "select": {"type": "point", "fields": ["GEO"]},
      "bind": "legend"
    }
  ],
  "transform": [
    {
      "filter": {
        "field": "GEO",
        "oneOf": [
          "Bulgaria",
          "Croatia",
          "Czechia",
          "Hungary",
          "Poland",
          "Romania",
          "Lithuania",
          "Slovakia",
          "Slovenia",
          "Estonia",
          "Latvia"
        ]
      }
    }
  ],
  "height": 300,
  "width": 300,
  "mark": {"type": "line", "point": true},
  "background": "ghostwhite",
  "encoding": {
    "x": {
      "field": "TIME",
      "type": "temporal",
      "title": "Year",
      "axis": {"grid": false}
    },
    "y": {
      "field": "Value",
      "type": "quantitative",
      "title": "Overall earnings gap, %",
      "axis": {"grid": false}
    },
    "color": {
      "field": "GEO",
      "type": "nominal",
      "scale": {"scheme": "cividis"},
      "title": null,
      "legend": {"orient": "right"}
    },
    "opacity": {"condition": {"param": "countries", "value": 1}, "value": 0.2}
  },
  "config": {}
}
